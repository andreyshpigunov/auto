{
	"name": "Auto",
	"version": "1.0.0",
	"description": "Библиотека базовых стилей и скриптов для создания сайтов.",
	"main": "rollup.config.js",
	"devDependencies": {
		"@babel/core": "^7.11.6",
		"@babel/preset-env": "^7.11.5",
		"@rollup/plugin-babel": "^5.2.2",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^7.1.3",
		"autoprefixer": "^10.1.0",
		"cssnano": "^4.1.10",
		"node-sass": "^4.14.1",
		"postcss": "^8.2.1",
		"postcss-cli": "^8.3.0",
		"rollup": "^2.28.2",
		"rollup-plugin-terser": "^7.0.2",
		"watch": "^1.0.2"
	},
	"scripts": {
		"_build:scss": "node-sass 'src/scss' -o css",
		"_build:postcss": "postcss css/ --use autoprefixer cssnano -d css/ --no-map",
		"build:css": "npm run _build:scss && npm run _build:postcss",
		"build:js": "rollup -c",
		"build": "npm run build:js && npm run build:css",
		"build:watch": "watch 'npm run build' src/*",
		"build:watch:js": "watch 'npm run build:js' src/*",
		"build:watch:css": "watch 'npm run build:css' src/*"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/andreyshpigunov/auto.git"
	},
	"author": "Andrey Shpigunov",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/andreyshpigunov/auto/issues"
	},
	"homepage": "https://github.com/andreyshpigunov/auto#readme",
	"browserslist": [
		"defaults"
	]
}